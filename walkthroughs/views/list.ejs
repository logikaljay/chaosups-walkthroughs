<% layout('../../../views/layout.ejs') -%>
<div class="row-fluid">
  <div class="span6">
    <h3>Walkthroughs</h3>
  </div>
  <div class="span6 pull-right" style="text-align:right">
       <a href="/walkthroughs/upload" class='btn btn-info pull-right'>Add a walkthrough</a>
  </div>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Title</th>
        </tr>
    </thead>
    <tbody>
        <% walkthroughs.forEach(function(walkthrough) { %>
        <tr>
            <td><a href='/walkthroughs/view/<%= walkthrough.file %>' target="_blank"><%= walkthrough.title %></a></td>
        </tr>
        <% }); %>
    </tbody>
</table>